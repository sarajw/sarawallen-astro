---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Toggle from '../components/Toggle.astro';
import StuffModal from '../components/StuffModal.astro';
import PrivacyPolicy from '../components/PrivacyPolicy.astro';
import A11YStatement from '../components/A11yStatement.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import '../styles/art.css';

// Use getCollection to fetch all posts, and then sort them by date.
// const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
// 	(a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
// );
import { getCollection } from "astro:content";
const featured = (await getCollection("posts")).filter((post) => post.data.draft !== true && post.data.featured === 'featured').sort(
	(a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );
const posts = (await getCollection("posts")).filter((post) => post.data.draft !== true && !post.data.featured).sort(
	(a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );
const downplay = (await getCollection("posts")).filter((post) => post.data.draft !== true && post.data.featured === 'downplay').sort(
	(a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );

